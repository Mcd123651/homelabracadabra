services:
  huntarr:
    image: huntarr/huntarr:latest
    container_name: huntarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ={{ service.timezone | default("America/New_York") }}
    volumes:
      - {{ ansible_user_dir }}/appdata/huntarr:/config
    ports:
      - {{ service.port }}:{{ service.port }}
    restart: unless-stopped
    networks:
      - arr-net
  
networks:
  arr-net:
    name: arr-net
    external: True