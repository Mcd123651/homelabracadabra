# ======================
# Global Configuration
# ======================
global:
  vm_ssh_port: 2222
  subnets: ["192.168.100.0/24"]

proxmox:
  host: "192.168.100.10"        # Replace with your Proxmox host IP
  target_node: "lab-node"       # Replace with your actual node name

template:
  ubuntu:
    name: "ubuntu-cloudinit-template"
    image: "ubuntu-cloudimg-amd64.img"
    vmid: 9000
    datasource_id: "default-datastore"
    disk: 20
    memory: 1024
    user: "labadmin"
    ssh_key: "/home/user/.ssh/id_rsa_lab.pub"
    tags: ["template", "ubuntu"]

# ======================
# VM Configuration
# ======================
hosts:
  - name: vm-networking
    cores: 2
    memory: 4096
    disk: 32
    ip: 192.168.100.101/24
    gateway: 192.168.100.1
    template: 9000

  - name: vm-media
    cores: 4
    memory: 8192
    disk: 64
    ip: 192.168.100.102/24
    gateway: 192.168.100.1
    template: 9000

# ======================
# Services Configuration
# ======================
services:
  - name: cloudflared
    vm: vm-networking
    timezone: America/New_York
    cloudflared_tunnel_token: AS9a8scasCA....

  - name: swag
    vm: vm-networking
    timezone: America/New_York
    url: test.com
    homepage_url: http://192.168.100.105:5055
    dns_cloudflare_api_token: AS9a8scasCA....