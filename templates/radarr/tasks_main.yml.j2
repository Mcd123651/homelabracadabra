- name: Create radarr config directory
  file:
    path: "{{ ansible_user_dir }}/{{ service.name }}"
    state: directory

- name: Deploy docker-compose.yml
  template:
    src: docker-compose.yml.j2
    dest: "{{ ansible_user_dir }}/{{ service.name }}/docker-compose.yml"

- name: Deploy templated config radarr.subdomain.conf
  template:
    src: radarr.subdomain.conf.j2
    dest: "{{ ansible_user_dir }}/appdata/swag/nginx/proxy-confs/radarr.subdomain.conf"
    owner: 1000
    group: 1000
    mode: '0644'
  become: true
  delegate_to: vm-networking
  
- name: Start service with docker compose
  shell: docker compose up -d
  args:
    chdir: "{{ ansible_user_dir }}/{{ service.name }}"
